---
import { getFilteredNavigationSections, isActive } from '../utils/navigation';

// Sidebar navigation component
const currentPath = Astro.url.pathname;
const filteredSections = getFilteredNavigationSections(currentPath);
---

<nav class="px-4 py-6 space-y-8">
  {filteredSections.map((section) => (
    <div>
      <h3 class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-3">
        {section.title}
      </h3>
      <ul class="space-y-1">
        {section.items.map((item) => (
          <li>
            <a
              href={item.href}
              class={`
                block px-3 py-2 text-sm font-medium transition-colors
                ${isActive(item.href, currentPath)
                  ? 'bg-primary-50 text-primary-700 border-r-2 border-primary-500 dark:bg-primary-900/20 dark:text-primary-300 dark:border-primary-400'
                  : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50 dark:text-gray-400 dark:hover:text-gray-100 dark:hover:bg-gray-800'
                }
              `}
            >
              {item.title}
            </a>
          </li>
        ))}
      </ul>
    </div>
  ))}

  <!-- Version info -->
  <div class="pt-6 border-t border-gray-200 dark:border-gray-700">
    <div class="px-3">
      <p class="text-xs text-gray-500 dark:text-gray-400 mb-2">Version</p>
      <div class="flex items-center space-x-2">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400">
          Latest
        </span>
        <span class="text-sm text-gray-600 dark:text-gray-400">v0.1.0</span>
      </div>
    </div>
  </div>

  <!-- Quick links -->
  <div class="pt-6 border-t border-gray-200 dark:border-gray-700">
    <div class="px-3">
      <p class="text-xs text-gray-500 dark:text-gray-400 mb-3 uppercase tracking-wide font-semibold">
        Quick Links
      </p>
      <ul class="space-y-2">
        <li>
          <a
            href="https://github.com/DreamsHive/adonis-odm"
            class="flex items-center text-sm text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg class="mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
